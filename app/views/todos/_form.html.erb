<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :todo_title, style: "display: block" %>
    <%= form.text_field :todo_title, class:"form-control" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control" %>
  </div>

  <div>
    <%= form.label :creation_date %>
    <%= " in Timezone: PST" %>
    <%= form.datetime_field :creation_date, class:"form-control" %>
  </div>

  <div>
    <%= form.label :completion_date %>
    <%= " in Timezone: PST" %>
    <%= form.datetime_field :completion_date, class:"form-control" %>
  </div>

  <br/>

  <div>
    <%= form.submit %>
  </div>
<% end %>
